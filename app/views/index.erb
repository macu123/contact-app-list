<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Home Page</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form class="new_contact" role="form">
        <div class="form-group">
          <label for="firstname">First Name:</label>
          <input type="text" class="form-control" id="firstname">
        </div>
        <div class="form-group">
          <label for="lastname">Last Name:</label>
          <input type="text" class="form-control" id="lastname">
        </div>
        <div class="form-group">
          <label for="email">Email address:</label>
          <input type="email" class="form-control" id="email">
        </div>
        <button type="button" class="btn btn-default">Add</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form class="form-inline search_form">
        <div class="form-group">
          <label for="search_term">Search Term:</label>
          <input type="search" class="form-control" id="search_term">
        </div>
        <button type="button" class="btn btn-default">Search</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form class="form-inline show_delete_form">
        <div class="form-group">
          <label for="contact_id">Contact ID:</label>
          <input type="number" class="form-control" id="contact_id">
        </div>
        <button type="button" class="btn btn-default show_button">Show</button>
        <button type="button" class="btn btn-default delete_button">Delete</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <button class="btn btn-primary center-block show_all_button">Show All</button>
    </div>
  </div>
</div>